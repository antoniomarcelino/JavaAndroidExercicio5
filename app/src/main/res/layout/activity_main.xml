<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="40dp"
        android:text="Cadastro Simples"
        android:fontFamily="sans-serif-black"
        android:textColor="#000"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/nome"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/textView"
        android:inputType="textPersonName"
        android:hint="Nome Completo" />

    <EditText
        android:id="@+id/cpf"
        android:layout_below="@id/nome"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:hint="Cadastro de Pessoa Física"
        android:ems="10"
        android:inputType="number" />


    <EditText
        android:id="@+id/dataNascimento"
        android:layout_below="@id/cpf"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:hint="Data de Nascimento"
        android:ems="10"
        android:inputType="date" />

    <EditText
        android:id="@+id/telefone"
        android:layout_below="@id/dataNascimento"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:hint="Telefone"
        android:ems="10"
        android:inputType="phone" />

    <EditText
        android:id="@+id/celular"
        android:layout_below="@id/telefone"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:hint="Celular"
        android:ems="10"
        android:inputType="phone" />

    <EditText
        android:id="@+id/email"
        android:layout_below="@id/celular"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:hint="Endereço de Correio Eletronico"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="#009688"
        android:text="Cadastrar" />


</RelativeLayout>